{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
        "types": ["node"],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "rootDir": "./src",
        "outDir": "dist/esm",
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["./src"]
}
